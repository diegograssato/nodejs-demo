{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "sourceMap": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es6",
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules/*",
    ".webpack/**/*",
    ".vscode/**/*",
    ".devcontainer/**/*"
  ],
  "plugins": [
    {
      "transform": "@zerollup/ts-transform-paths",
    }
  ]
}